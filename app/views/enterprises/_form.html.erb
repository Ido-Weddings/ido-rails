<div class='container'>
  <div class='row'>
  <%= form_for(@enterprise) do |f| %>
    <% if @enterprise.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@enterprise.errors.count, "error") %> prohibited this enterprise from being saved:</h2>

        <ul>
        <% @enterprise.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class='row'>
    <div class="input-field col s8 offset-s2">
      <%= f.label :name %>
      <%= f.text_field :name, size:20, class: "validate" %>
    </div>
  </div>
  <div class='row'>
    <div class="input-field col s8 offset-s2">
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
  </div>
  <div class='row'>
    <div class="input-field col s4 offset-s2">
      <%= f.label :capacity %>
      <%= f.number_field :capacity %>
    </div>
    <div class="input-field col s4">
      <%= f.label :base_price %>
      <%= f.text_field :base_price %>
    </div>
  </div>
  <div class='row'>
    <div class="input-field col s4 offset-s2">
      <%= f.label :telephone %>
      <%= f.telephone_field :telephone %>
    </div>
    <div class="input-field col s4">
      <%= f.label :cellphone %>
      <%= f.telephone_field :cellphone %>
    </div>
  </div>
  <div class='row'>
    <div class="input-field col s8 offset-s2">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
  </div>
  <div class='row'>
    <div class="input-field col s4 offset-s2">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="input-field col s4">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>
  </div>
  <div class='row'>
    <div class="input-field col s8 offset-s2">
      <%= f.label :address %>
      <%= f.text_field :address %>
    </div>
  </div>
  <div class='row'>
    <div class="col s6 offset-s2">
      <%= f.label 'Categorias da sua empresa' %>
      <%= collection_check_boxes(:enterprise, :category_ids, @categories, :id, :name) do |b| %>
      <div>
        <%= b.check_box %>
        <%= b.label %>
      </div>
      <% end %>
    </div>
  </div>
    <% if false %>
    <div>
      <%= fields_for :category do |c| %>
        <% @categories.each do |a| %>
        <div>
          <%= c.check_box a.name, {class: 'filled-in'}, "yes", "no" %>
          <%= c.label a.name %>
        </div>
        <% end %>
      <% end %>
    </div>
    <% end %>
    <div class='row'>
    <div class="col s6 offset-s2">
      <%= f.submit 'Criar', class: "waves-effect waves-light btn" %>
    </div>
  </div>
  <% end %>
</div>
</div>
