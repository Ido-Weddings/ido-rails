<div id="index-banner" class="valign-wrapper parallax-container" style="background-color: rgba(12, 39, 70, 0.85); height: 700px" >
  <div class="section no-pad-bot">
    <div class="container">
		<div class="row center">
			<h1>Login</h1>
		</div>
	  	
	  	<div class='row'>
		  	<div class='col s6 offset-s3'>
			<%= form_tag '/login' do %>

			  Email: <%= text_field_tag :email %>
			  Password: <%= password_field_tag :password %>
			</div>
		</div>
		  
		  <div class="row center">
		  	<div class="col s6 offset-s5">
				<%= submit_tag "Logar", class: "waves-effect waves-light btn btn-algo"%>
		 	</div>
		  </div>
		<% end %>
    </div>
  </div>
  <div class="parallax"><img src="assets/background1.png" alt="Unsplashed background img 1"></div>
</div>


